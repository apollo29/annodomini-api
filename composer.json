{
    "name": "odan/slim4-skeleton",
    "description": "Anno Domini Game API",
    "license": "MIT",
    "type": "api",
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:apollo29/annodomini-repository.git"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "apollo29/annodomini-repository": "^0.3.5",
        "cakephp/chronos": "^3",
        "cakephp/database": "^5",
        "cakephp/validation": "^5",
        "fig/http-message-util": "^1.1",
        "lcobucci/jwt": "^4.0",
        "monolog/monolog": "^3",
        "nyholm/psr7": "^1.8.1",
        "nyholm/psr7-server": "^1.1",
        "php-di/php-di": "^7",
        "ramsey/uuid": "^4.2",
        "selective/basepath": "^2",
        "slim/slim": "^4",
        "tuupola/slim-basic-auth": "^3.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "phpstan/phpstan": "1.*",
        "phpunit/phpunit": "^10",
        "selective/test-traits": "^4",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "cs:check": [
            "@putenv PHP_CS_FIXER_IGNORE_ENV=1",
            "php-cs-fixer fix --dry-run --format=txt --verbose --diff --config=.cs.php --ansi"
        ],
        "cs:fix": [
            "@putenv PHP_CS_FIXER_IGNORE_ENV=1",
            "php-cs-fixer fix --config=.cs.php --ansi --verbose"
        ],
        "sniffer:check": "phpcs --standard=phpcs.xml",
        "sniffer:fix": "phpcbf --standard=phpcs.xml",
        "stan": "phpstan analyse -c phpstan.neon --no-progress --ansi",
        "start": "php -S localhost:8080 -t public/",
        "test": "phpunit --configuration phpunit.xml --do-not-cache-result --colors=always --display-deprecations",
        "test:all": [
            "@cs:check",
            "@sniffer:check",
            "@stan",
            "@test"
        ],
        "test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
